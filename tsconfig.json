{
    "compilerOptions": {
        "sourceRoot": "./app/",
        "outDir": "./public/",
        "declaration": true,
        "declarationDir": "./public/",
        "module": "commonjs",
        "allowJs": false,
        "importHelpers": false,
        "moduleResolution": "node",
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "jsx": "react",
        "lib": ["es2015", "dom"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "react", "react-dom", "node"
        ]
    },
    "include": [
        "**/@types/*.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "**/*.spec.ts",
        "**/*.html",
        "**/*.json",
        "**/*.css"
    ]
}
